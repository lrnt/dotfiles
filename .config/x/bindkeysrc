# Increase volume
"pamixer --increase 5"
    XF86AudioRaiseVolume

# Decrease volume
"pamixer --decrease 5"
    XF86AudioLowerVolume

# Toggle mute
"pamixer -t"
    XF86AudioMute

# Toggle touchpad
"synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')"
    XF86WebCam

# Lock
"i3lock -c 000000"
    XF86ScreenSaver

# Disable ctrl + scolling
"/bin/true"
  Control + b:5 + release

"/bin/true"
  Control + b:4 + release
