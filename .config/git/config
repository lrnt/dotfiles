[core]
    excludesfile = ~/.gitignore

[alias]
    co = checkout
    ll = log --graph --pretty=format':%C(yellow)%h%C(cyan)%d%C(reset) %s %C(white) %C(red bold)%an%C(reset), %C(green)%ar%C(reset)'
    l = !git --no-pager ll -8
    s = status -s
    ss = show --summary

[color]
    ui = auto

[color "status"]
    added = yellow bold
    changed = green bold
    untracked = red bold

[include]
    path = ~/.gitconfig.local

[push]
    default = simple

[diff "gpg"]
    textconv = gpg -q --no-tty --decrypt

[merge]
    tool = vimdiff
    conflictstyle = diff3
